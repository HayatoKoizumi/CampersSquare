<div class="container">
  <div class="col-md-10 mx-auto mt-5">

    <div class="row justify-content-center mb-3">
      <div class="col-md-4 headline">
        <h4>新規投稿フォーム</h4>
      </div>
    </div>

    <div class="form d-flex justify-content-center" >
      <%= form_with model: @post_camp, method: :post, local: true do |f| %>

        <table class="table mt-5">
          <tbody>
            <tr>
              <td>画像</td>
              <td><%= f.file_field :image,accept: "image/*" %></td>
            </tr>
            <tr>
              <td>タイトル</td>
              <td><%= f.text_field :title, autofocus: true, placeholder:"タイトル",class:"form-control" %></td>
            </tr>
            <tr>
              <td>本文</td>
              <td> <%= f.text_area :body, placeholder:"ここに本文を記述します",rows:"5",class:"form-control"%></td>
            </tr>
          </tbody>
        </table>

        <div class="raw text-center mt-3">
          <%= f.submit "新規登録", class:"btn w-25", style: "background-color: #1A120B; color: #d8e5cb;"%>
        </div>

      <% end %>
    </div>

  </div>
</div>