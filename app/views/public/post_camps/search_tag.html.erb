<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <div>
        <h2>タグが"<%=@tag.name%>"の投稿一覧</h2>
        <p class="text-right"><%= link_to '投稿する', new_post_camp_path, :class => "btn", style: "background-color: #1a120b; color: #ffffff;" %></p>
      </div>
      <!--タグリスト-->
      <div class="d-flex mt-3 mb-3">
        <% @tag_list.each do |list|%>
          <i class="fa-sharp fa-solid fa-tag"></i>
          <%=link_to list.name,search_tag_path(tag_id: list.id) %>
          <%="(#{list.post_camps.count})" %>
        <% end %>
      </div>
      <%= render "index", post_camps: @post_camps %>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @post_camps %>
      </div>
    </div>
  </div>