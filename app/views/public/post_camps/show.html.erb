<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= image_tag @post_camp.get_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
           <%= image_tag @post_camp.user.get_profile_image(100,100), class:"mt-3 rounded-circle";  %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_camp_path(@post_camp.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @post_camp.title %></span></strong>
            <% end %>
          </p>
          <p class="card-title">本文：<%= @post_camp.body %></p>
          <span><i class="fas fa-user"></i> By <%= @post_camp.user.user_name %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @post_camp.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <span><i class="fa fa-comment"></i> <%= link_to "#{@post_camp.comments.count}", post_camp_path(@post_camp.id), class:"text-dark" %> ｜ </span>
          <span><%= render "public/favorites/favorite", post_camp: @post_camp %></span>
          <% if @post_camp.user == current_user %>
            <span> ｜ </span><%= link_to "削除", post_camp_path(@post_camp), class:"text-dark", method: :delete %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="comments card-text">
        <h4 class="mt-3"><%= @post_camp.comments.count %>件コメント</h4>
        <% @post_camp.comments.each do |comment| %>
          <div class="media border mb-3">
            <%= image_tag comment.user.get_profile_image(60,60), class:"bd-placeholder-img align-self-center mx-3";  %>
            <div class="media-body ml-4 p-3">
              <p><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></p>
              <p><%= comment.comment %></p>
              <% if comment.user == current_user %>
                <%= link_to "削除", post_camp_comment_path(comment.post_camp, comment), method: :delete, class: "btn btn-danger pull-right" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="new-comment card-text">
        <%= form_with(model:[@post_camp, @comment]) do |f| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">コメントする</label>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          </div>
          <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>