<div class="card-list-container py-5">
  <% post_camps.each do |post_camp| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_camp_path(post_camp.id) do %>
      <%= image_tag post_camp.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag 'no_image.jpg', class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_camp_path(post_camp.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_camp.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post_camp.body %></p>
          <span><i class="fas fa-user"></i> By <%= post_camp.user.user_name %> ｜ </span>
          <span><!--%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %--></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_camps %>
</div>