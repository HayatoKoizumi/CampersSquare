<div class="container mt-4">
  <div class="row justify-content-center">

    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'public/users/info', user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2><%= @user.user_name %> の フォロワー一覧</h2>
      <% if @users.exists? %>
        <%= render 'public/users/index', users: @users %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>

  </div>
</div>