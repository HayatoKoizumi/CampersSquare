<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-11">
      <h4 class="col-md-4 mx-auto headline mb-4 text-center">会員情報編集</h4>

      <div class="p-3 rounded" style="background-color: #d8e5cb;">
        <%= form_with model: @user, url:user_path do |f| %>
        <!--%= render 'layouts/error_messages', model: f.object %-->

        <div class="form-group mt-3 row justify-content-center">
          <label class="col-md-2 col-form-label">プロフィール画像</label>
          <div class="col-md-6">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row mt-3 justify-content-center">
          <label class="col-md-2 col-form-label">氏名（非公開）</label>
          <div class="col-md-3">
            <%= f.text_field :last_name , class:"form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group mt-3 row justify-content-center">
          <label class="col-md-2 col-form-label">メールアドレス（非公開）</label>
          <div class="col-md-6 align-middle">
            <%= f.text_field :email, class:"form-control" %>
          </div>
        </div>

        <div class="form-group mt-3 row justify-content-center">
          <label class="col-md-2 col-form-label">ユーザーネーム</label>
          <div class="col-md-6">
            <%= f.text_field :user_name, class:"form-control"  %>
          </div>
        </div>

        <div class="form-group mt-3 row justify-content-center">
          <label class="col-md-2 col-form-label">紹介文</label>
          <div class="col-md-6">
            <%= f.text_area :introduction, class:"form-control" %>
          </div>
        </div>

        <div class="d-flex justify-content-around m-auto mt-2 mb-2">
          <div class="form-group mt-3">
            <%= f.submit '編集内容を保存', class: 'btn btn-lg', style: "background-color: #1A120B; color: #d8e5cb;" %>
          </div>
          <% end %>
          <div class="align-items-center mt-3">
            <%= link_to "退会する", users_check_path, class: 'btn btn-lg btn-danger', style: "color: #d8e5cb;" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
