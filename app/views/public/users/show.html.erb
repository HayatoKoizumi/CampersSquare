<div class="container mt-5">
  <div class='row justify-content-center'>
    <div class="col-md-8">

    <h4 class="col-md-4 mx-auto headline">マイページ</h4>

  <div class='row mx-auto'>
    <div class="col-md-3 d-flex mt-3 mb-2 justify-content-between align-items-center">
      <h5 class="mb-0">登録情報</h5>
      <% unless @user.guest_user? %>
        <%= link_to "編集", edit_user_path, class: "btn btn-success d-flex align-items-center ms-3" %>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="mt-3">
      <table class="table table-bordered border-dark table-hover table-inverse custom-table">
        <tbody>
          <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
          <tr>
            <th>氏名(非公開)</th>
            <td><%= @user.last_name %> <%= @user.first_name %></td>
          </tr>
          <tr>
            <th>メールアドレス(非公開)</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <th>紹介文</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
