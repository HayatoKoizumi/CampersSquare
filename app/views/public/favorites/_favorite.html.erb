<% if post_camp.favorited_by?(current_user) %>
  <%= link_to post_camp_favorites_path(post_camp), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_camp.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_camp_favorites_path(post_camp), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_camp.favorites.count %> いいね
  <% end %>
<% end %>
