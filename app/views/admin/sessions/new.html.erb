<div class= 'container mt-5 mb-5'>
  <div class='row pb-5'>
    <div class="col-md-7 mx-auto" >

      <h4 class="col-md-4 mx-auto headline mt-2 mb-4 text-center">管理者ログイン</h4>

      <div class="p-3 rounded" style="background-color: #d8e5cb;">

        <div class='login-flash-message'>
          <%= flash[:alert] %>
        </div>

        <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
          <div class="form-group row mt-4 justify-content-center">
            <%= f.label "メールアドレス",class:"col-3 col-form-label" %>
            <div class="col-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>
          </div>
          <div class="form-group row mt-4 justify-content-center">
            <%= f.label "パスワード" ,class:"col-3 col-form-label"%>
            <div class="col-8">
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <%= f.submit "ログイン" ,class: "btn btn-sm mt-3 w-25", style: "background-color: #1a120b; color: #d8e5cb;"%>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>

      </div>

    </div>
  </div>
</div>